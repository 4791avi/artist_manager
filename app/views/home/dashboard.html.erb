<div class="row">
        <div  class="col-lg-3">
            <div class="card">
                <div class="card-body text-center">
                    <div class="card-img-actions d-inline-block mb-3">
                        <%= image_tag(current_user.avatar.url(:medium), :size => "166x170", :class => "img-fluid rounded-circle") %>
                    </div>
                    <h6 class="font-weight-semibold mb-0"><%= current_user.name%></h6>
                    <div class="list-icons list-icons-extended mt-3">
                      <a href="#" data-dismiss="modal" data-toggle="modal" data-target="#avatar_upload" class="btn btn-primary btn-file ml-auto">Upload Profile Picture</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
          <div class="card">
              <div class="card-header header-elements-inline">
                  <h6 class="card-title"><%= current_user.name %> <br> <%= current_user.city %>, <%= current_user.country %></h6>
                  <div class="header-elements">
                      <div class="list-icons">
                        <a href="#" data-dismiss="modal" data-toggle="modal" data-target="#modal_edit" class="ml-auto">Edit Profile</a>
                      </div>
                  </div>
              </div>
              <div class="card-body">
                      <div class="row">
                          <div class="col-md-12">
                              <div class="form-group">
                                  <label><%= current_user.about%></label>
                              </div>
                          </div>
                      </div>
                      <div class="row">
                          <div class="col-md-12">
                              <div class="form-group">
                                 
                              </div>
                          </div>

                      </div>
                      <div class="row">
                          <div class="col-md-12">
                              <div class="form-group">
                                 
                              </div>
                          </div>

                      </div> 
                      <div class="row">
                          <div class="col-md-9">
                              <div class="form-group">
                                  
                              </div>
                          </div>
                          <div class="col-md-3">
                              <div class="form-group">
                                  <label><%= current_user.email %> | <%= current_user.phone %></label>
                              </div>
                          </div>
                      </div>                                            
              </div>
          </div>
        </div>
</div>

<!-- Content area -->
<div class="content">
<!-- Images grid -->
<div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
  <div class="d-flex">
    <div class="breadcrumb">
     <h6 class="card-title"> <a href="#" class="breadcrumb-item">PAINTINGS</a></h6>
    </div>

    <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
  </div>

  <div class="header-elements d-none">
    <div class="breadcrumb justify-content-center">
      <a href="#" data-dismiss="modal" data-toggle="modal" data-target="#painting_upload" class="btn btn-primary btn-file ml-auto">Add Painting</a>
    </div>
  </div>
</div>



    <div class="row">
      <% @paintings_all.each do |paint|%>
        <div class="col-xl-3 col-sm-6">
            <div class="card">
                <div class="card-img-actions px-1 pt-1">
                    <!-- <img class="card-img img-fluid" src="/assets/placeholder.jpg" alt=""> -->
                     <%= image_tag(paint.picture.url(:medium), :size => "420x200") %>
                </div>
                <div class="card-body">
                     <h6 class="font-weight-semibold">Painting</h6><label><div class="uniform-checker"><span class=""><input type="checkbox" class="form-check-input-styled"></span></div>Mark Public </label>
                </div>
            </div>
        </div>
        <% end %>
    </div>
    <!-- /images grid -->
</div>
<!-- /content area -->
<!-- Basic modal -->
<div id="modal_edit" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Profile</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                      <%= devise_error_messages! %>
                        <div class="form-group request">
                          <label>Name:</label>
                          <input type="text" class="form-control" name="user[name]" placeholder="Name" value="<%=  resource.name || '' %>">
                        </div>

                        <div class="form-group">
                          <label>Email:</label>
                          <input type="text" class="form-control" name="user[email]" placeholder="Email" value="<%= resource.email || '' %>">
                        </div>

                        <div class="form-group">
                          <label>Phone:</label>
                          <input type="text" class="form-control" name="user[phone]" placeholder="Phone" value="<%= resource.phone || '' %>">
                        </div>


                        <div class="form-group">
                          <label>City:</label>
                          <input type="text" class="form-control" name="user[city]" placeholder="City" value="<%= resource.city || '' %>">
                        </div>
                        <div class="form-group">
                          <label>Country:</label>
                          <input type="text" class="form-control" name="user[country]" placeholder="Country" value="<%= resource.country || '' %>">
                        </div>

                        <div class="form-group">
                          <label>Username:</label>
                          <input type="text" class="form-control" name="user[username]" placeholder="Username" value="<%= resource.username || '' %>">
                        </div>

                        <div class="form-group">
                          <label>New Password:</label>
                          <input type="password" class="form-control" name="user[password]" placeholder="password" value="<%= resource.password || '' %>">
                        </div>
                        <div class="form-group">
                          <label>Current Password:</label>
                          <input type="password" class="form-control" name="user[current_password]" placeholder="current Password" value="<%= resource.current_password || '' %>">
                        </div>                                                  
                        <div class="form-group row">
                        <label>About:</label>
                            <textarea rows="5" cols="5" class="form-control" name="user[about]" placeholder="Enter your message here" value="<%= resource.about || '' %>"></textarea>
                        </div>                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Save <i class="icon-circle-right2 ml-2"></i></button>
                        </div>
                      <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /basic modal -->


<!-- Basic modal -->
<div id="avatar_upload" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload Profile Image</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
                      <%= devise_error_messages! %>
                        <div class="form-group request">
                            <div class="uniform-uploader"><input type="file" name="user[avatar]" class="form-input-styled" data-fouc=""><span class="filename" style="user-select: none;">No file selected</span><span class="action btn bg-pink-400" style="user-select: none;">Choose File</span></div>
                        </div>

                        <div class="form-group">
                          <label>Password:</label>
                          <input type="password" class="form-control" name="user[current_password]" placeholder="Password">
                        </div>
                       
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Upload <i class="icon-circle-right2 ml-2"></i></button>
                        </div>
                      <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /basic modal -->

<!-- Basic modal -->
