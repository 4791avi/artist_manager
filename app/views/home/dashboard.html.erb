                        <%= form_for @painting, url: home_index_path, html: {method: :post, multipart: true } do |form| %>
                        <div class="form-group request">
                            <div class="uniform-uploader"><input type="file" name="painting[picture]" class="form-input-styled" data-fouc=""><span class="filename" style="user-select: none;">No file selected</span><span class="action btn bg-pink-400" style="user-select: none;">Choose File</span></div>
                        </div>                       
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Upload <i class="icon-circle-right2 ml-2"></i></button>
