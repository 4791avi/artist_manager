  <div class="content">
    <div class="row">
      <% @users.each do |usr|%>
        <div class="col-xl-3 col-sm-6">
          <div class="card">
            <div class="card-img-actions px-1 pt-1">
                    <% if usr.avatar.present?  %>
                    <%= image_tag(usr.avatar.url(:medium), :size => "420x200") %>
                    <% else %>
                    <%= image_tag("/images/placeholder.jpg", :size => "420x200") %>
                    <% end %>             
            </div>

            <div class="card-body text-center">
              <h6 class="font-weight-semibold"> <%= link_to usr.name, home_painting_path(user_id: usr.id) %></h6>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
  <div id="modal_default" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Sign In</h5>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>        
        <div class="modal-body">
            <div class="card">
              <div class="card-body">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-group">
                    <label>Email:</label>
                    <input type="email" class="form-control" name="user[email]" placeholder="Email">
                  </div>

                  <div class="form-group">
                    <label>Password:</label>
                    <input type="password" class="form-control" name="user[password]" placeholder="password">
                  </div>

                  <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                  </div>                  
                <% end %>
                <div class="form-group">
                  <a href="login_password_recover.html" data-dismiss="modal" data-toggle="modal" id="modal_default" data-target="#modal_register" class="ml-auto">New user? Register here</a>
                </div>              
                <div class="form-group">
                  <a href="#" class="ml-auto">Forgot password?</a>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /basic modal -->
  <!-- Basic modal -->
  <div id="modal_register" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Sign Up</h5>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>        
        <div class="modal-body">
            <div class="card">
              <div class="card-body">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <div class="form-group request">
                    <label>Name:</label>
                    <input type="text" class="form-control" name="user[name]" placeholder="Name" required>
                  </div>

                  <div class="form-group">
                    <label>Email:</label>
                    <input type="text" class="form-control" name="user[email]" placeholder="Email" required>
                  </div>

                  <div class="form-group">
                    <label>Phone:</label>
                    <input type="text" class="form-control" name="user[phone]" placeholder="Phone" required>
                  </div>


                  <div class="form-group">
                    <label>City:</label>
                    <input type="text" class="form-control" name="user[city]" placeholder="City" required>
                  </div>
                  <div class="form-group">
                    <label>Country:</label>
                    <input type="text" class="form-control" name="user[country]" placeholder="Country" required>
                  </div>

                  <div class="form-group">
                    <label>Username:</label>
                    <input type="text" class="form-control" name="user[username]" placeholder="Username" required>
                  </div>

                  <div class="form-group">
                    <label>Password:</label>
                    <input type="password" class="form-control" name="user[password]" placeholder="password" required>
                  </div>                                                      
                  <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                  </div>                  
                <% end %>
                <div class="form-group">
                  <a href="login_password_recover.html" data-dismiss="modal" data-toggle="modal" id="modal_register" data-target="#modal_default" class="ml-auto">Login to your account</a>
                </div>                
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /basic modal -->
