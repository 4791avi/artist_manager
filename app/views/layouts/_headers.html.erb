<!--Page header -->
<div class="page-header page-header-light">
	<div class="page-header-content header-elements-md-inline">
		<%= image_tag("/images/banner.jpg", :size => "50x50") %>
		<div class="page-title d-flex">
			<!-- <img src="/assets/placeholder.jpg" style="height:100; width:10%" alt=""> -->
		<a href="/"	><h4><span class="font-weight-semibold">ARTIST</span> - Manager</h4></a>
		</div>
		<% if user_signed_in? %>

		<div class="header-elements d-none">
			<div class="d-flex justify-content-center">
				<a href="#" class="btn btn-link btn-float text-default"><span>Welcome - <b><%= current_user.name%></b> </span></a>
				<a href="/users/sign_out" class="btn btn-link btn-float text-default" data-method="delete"><span>Sign Out</span></a>
			</div>
		</div>					
		<% else %>
		<div class="header-elements d-none">
			<div class="d-flex justify-content-center">
				<a href="#" class="btn bg-blue ml-7 text-default ml-auto font-weight-semibold" data-toggle="modal" data-target="#modal_default"><span>SignIn</span></a>
			</div>
		</div>					
		<% end %>


	</div>	
</div>
<!-- /page header --> 